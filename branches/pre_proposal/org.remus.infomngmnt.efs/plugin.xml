<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension-point id="securityProvider" name="securityProvider" schema="schema/securityProvider.exsd"/>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="org.remus.infomngmnt.ui.general"
            class="org.remus.infomngmnt.efs.ui.NewEncryptedProjectWizard"
            finalPerspective="org.remus.infomngmnt.ui.infoperspective"
            icon="icons/iconexperience/encrypted_project_new.png"
            id="org.remus.infomngmnt.efs.newencryptedproject"
            name="Encrypted Information Project"
            project="true">
      </wizard>
      <primaryWizard
            id="org.remus.infomngmnt.efs.newencryptedproject">
      </primaryWizard>
   </extension>
   <extension
         point="org.eclipse.ui.decorators">
      <decorator
            adaptable="false"
            class="org.remus.infomngmnt.efs.ui.EncryptedProjectDecorator"
            id="org.remus.infomngmnt.efs.encryptedProject"
            label="Encrypted Project Label Decorator"
            lightweight="true"
            location="BOTTOM_LEFT"
            state="true">
         <description>
            Decorates all encrypted projects with a small icon
         </description>
      </decorator>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:window?after=additions">
         <command
               commandId="org.remus.infomngmnt.efs.securityProvider"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.remus.infomngmnt.efs.handler.OpenSecurityProviderDialog"
            id="org.remus.infomngmnt.efs.securityProvider"
            name="Security provider management">
      </command>
   </extension>

</plugin>

<plugin>
	<extension-point id="ruleDefinition" name="ruleDefinition" schema="schema/ruleDefinition.exsd"/>
 <extension-point id="script" name="script" schema="schema/script.exsd"/>

   <extension point="org.eclipse.emf.edit.itemProviderAdapterFactories">
      <factory
            uri="http://remus-software.org/rules/1.0"
            class="org.remus.rules.provider.RulesItemProviderAdapterFactory"
            supportedTypes=
              "org.eclipse.emf.edit.provider.IEditingDomainItemProvider
               org.eclipse.emf.edit.provider.IStructuredItemContentProvider
               org.eclipse.emf.edit.provider.ITreeItemContentProvider
               org.eclipse.emf.edit.provider.IItemLabelProvider
               org.eclipse.emf.edit.provider.IItemPropertySource"/>
   </extension>

   <extension point="org.eclipse.emf.ecore.generated_package">
      <package
            uri="http://remus-software.org/rules/1.0"
            class="org.remus.rules.RulesPackage"
            genModel="model/rule.genmodel"/>
   </extension>
   
   <extension
         point="org.remus.infomngmnt.ui.rules.ruleDefinition">
      <transfertype
            id="org.remus.infomngmnt.core.texttransfer"
            implementation="org.remus.infomngmnt.ui.rules.internal.transfer.TextTransferWrapper"
            name="Dropped/Pasted Text-Content">
      </transfertype>
      <transfertype
            id="org.remus.infomngmnt.core.htmltransfer"
            implementation="org.remus.infomngmnt.ui.rules.internal.transfer.HtmlTransferWrapper"
            name="Dropped/Pasted HTML-Content">
      </transfertype>
      <transfertype
            id="org.remus.infomngmnt.core.rftTransfer"
            implementation="org.remus.infomngmnt.ui.rules.internal.transfer.RTFTransferWrapper"
            name="Dropped/Pasted RichText-Content">
      </transfertype>
      <transfertype
            id="org.remus.infomngmnt.core.urlTransfer"
            implementation="org.remus.infomngmnt.ui.rules.internal.transfer.URLTransferWrapper"
            name="Dropped/Pasted URL">
      </transfertype>
      <transfertype
            id="org.remus.infomngmnt.core.filetransfer"
            implementation="org.remus.infomngmnt.ui.rules.internal.transfer.FileTransferWrapper"
            name="Dropped/Pasted File(s)">
      </transfertype>
      <transfertype
            id="org.remus.infomngmnt.core.imagetransfer"
            implementation="org.remus.infomngmnt.ui.rules.internal.transfer.ImageTransferWrapper"
            name="Dropped/Pasted Image or Image-Data">
      </transfertype>
      
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
         <page
            category="org.remus.infomngmnt.ui.desktop"
            class="org.remus.infomngmnt.ui.rules.RulePreferencePage"
            id="org.remus.infomngmnt.ui.rules"
            name="Rules">
      </page>
   </extension>
   <extension
         point="org.remus.infomngmnt.core.informationType">
      <information
            buildHtml="false"
            excludeFromIndex="true"
            icon="icons/full/obj16/run.gif"
            name="Generic Rule"
            presentation="org.remus.infomngmnt.ui.rules.script.InformationRepresentation"
            structuredefinition="structuredefinition.xmi"
            type="GROOVYRULE">
      </information>
   </extension>
   <extension
         point="org.remus.infomngmnt.ui.rules.ruleDefinition">
      <validTransfers
            transferId="org.remus.infomngmnt.core.filetransfer"
            typeId="GROOVYRULE">
      </validTransfers>
      <validTransfers
            transferId="org.remus.infomngmnt.core.htmltransfer"
            typeId="GROOVYRULE">
      </validTransfers>
      <validTransfers
            transferId="org.remus.infomngmnt.core.imagetransfer"
            typeId="GROOVYRULE">
      </validTransfers>
      <validTransfers
            transferId="org.remus.infomngmnt.core.rftTransfer"
            typeId="GROOVYRULE">
      </validTransfers>
      <validTransfers
            transferId="org.remus.infomngmnt.core.texttransfer"
            typeId="GROOVYRULE">
      </validTransfers>
      <validTransfers
            transferId="org.remus.infomngmnt.core.urlTransfer"
            typeId="GROOVYRULE">
      </validTransfers>
      <creationtrigger
            class="org.remus.infomngmnt.ui.rules.internal.script.EmptyCreationTrigger"
            typeId="GROOVYRULE">
      </creationtrigger>
   </extension>
   <extension
         point="org.remus.infomngmnt.ui.infotypes.infotypeimages">
      <image
            image="icons/full/obj16/run.gif"
            infotype="GROOVYRULE">
      </image>
   </extension>
   <extension
         point="org.remus.infomngmnt.ui.rules.script">
      <groovyScript
            bindingclass="org.remus.infomngmnt.ui.rules.internal.script.GeneralGroovyBinding"
            id="org.remus.infomngmnt.ui.rules.groovyScript"
            source="script/groovyStub.groovy">
      </groovyScript>
      <method
            category="org.remus.infomngmnt.ui.rules.creation"
            id="org.remus.infomngmnt.ui.rules.method1"
            name="Setting a content node of an IU"
            string="setValue(nodeId,content);">
      </method>
      <method
            category="org.remus.infomngmnt.ui.rules.creation"
            id="org.remus.infomngmnt.ui.rules.method2"
            name="Add File"
            string="addFile(node,path);">
      </method>
      <category
            id="org.remus.infomngmnt.ui.rules.creation"
            name="Creating Information Units">
      </category>
      <method
            category="org.remus.infomngmnt.ui.rules.creation"
            id="org.remus.infomngmnt.ui.rules.method3"
            name="Adding a dynamic value to an IU"
            string="addDynamicValue(nodeId, value)">
      </method>
   </extension>

</plugin>

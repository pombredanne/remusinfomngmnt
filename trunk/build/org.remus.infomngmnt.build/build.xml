<project name="project" default="build">
	
	<property name="jar.location" value="/opt/eclipse/plugins/org.eclipse.equinox.launcher_1.0.101.R34x_v20081125.jar"/>
	<property name="pde.build.location" location="/opt/eclipse/plugins/org.eclipse.pde.build_3.4.1.R34x_v20081217/scripts/productBuild/productBuild.xml"/>
	<property name="build.dir.location" location="/opt/bamboo/bamboohome/xml-data/build-dir/RCP-NIGHTLYRCP"/>


	<tstamp>
		<format property="today.date" pattern="yyyy-MM-dd_HH_mm" />
	</tstamp>

	<!-- properties -->




	<description>
            description
    </description>

	<target name="rename">
		<move file="N.RIM/RIM-linux.gtk.x86_64.zip" failonerror="false" tofile="N.RIM/RIM-linux.gtk.x86_64.tar.gz"></move>
		<move file="N.RIM/RIM-linux.gtk.x86.zip" failonerror="false" tofile="N.RIM/RIM-linux.gtk.x86.tar.gz"></move>
		<move file="N.RIM/RIM-macosx.carbon.ppc.zip" failonerror="false" tofile="N.RIM/RIM-macosx.carbon.ppc.tar.gz"></move>
	</target>

	<!-- ================================= 
          target: test              
         ================================= -->
	<target name="build" description="description">
		<java failonerror="true" fork="true" jar="${jar.location}">
			<arg value="-application" />
			<arg value="org.eclipse.ant.core.antRunner" />
			<arg value="-buildfile" />
			<arg value="${pde.build.location}" />
			<arg value="-Dbuilder=${build.dir.location}" />
		</java>
		<!-- <exec executable="pdeBuild.bat" /> -->
	</target>


	<!-- ================================= 
          target: clean              
         ================================= -->
	<target name="clean" description="Cleaning previous build">
		<delete failonerror="false" dir="${build.root.location}" />
		<delete failonerror="false" dir="rim" />
		<cvs>
		</cvs>
	</target>

	
	<!-- ================================= 
          target: name              
         ================================= -->
	<target name="setproperties" description="description">
		<copy overwrite="true" file="${plugin_customization}" todir="${build.root.location.plugins}/${app.property.name}">
		</copy>
	</target>
</project>

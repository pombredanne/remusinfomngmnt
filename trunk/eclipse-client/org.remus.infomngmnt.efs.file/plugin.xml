<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.core.filesystem.filesystems">
      <filesystem
            scheme="encryptedfile">
         <run
               class="org.remus.infomngmnt.efs.file.SecurityFileSystem">
         </run>
      </filesystem>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.remus.infomngmnt.efs.file.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.remus.infomngmnt.efs.securityProvider">
      <provider
            class="org.remus.infomngmnt.efs.file.FileEncryptedSecurityProvider"
            name="Encryption with Master-Key File"
            scheme="encryptedfile">
         <description>
            The security provider stores a generated password file to your local harddisc and tries to load this file for en- and decryption automatically on startup.
         </description>
      </provider>
   </extension>

</plugin>

<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.remus.core.informationType">
      <information
            buildHtml="false"
            excludeFromIndex="false"
            name="%information.name"
            presentation="org.remus.infomngmnt.internal.file.extension.FileRepresentation"
            structuredefinition="structuredefinition.xmi"
            type="FILE">
      </information>
   </extension>
   <extension
         point="org.eclipse.remus.search.indexer">
      <index
            analyzer="org.remus.infomngmnt.search.SimpleAnalyzer"
            node="filename"
            typeId="FILE">
      </index>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="org.eclipse.remus.ui.simple"
            class="org.remus.infomngmnt.file.ui.NewFileWizard"
            finalPerspective="org.remus.infomngmnt.ui.infoperspective"
            hasPages="true"
            icon="icons/iconexperience/16/document_plain_new.png"
            id="org.remus.infomngmnt.file.new"
            name="%wizard.name">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.remus.infomngmnt.ui.infoperspective">
         <newWizardShortcut
               id="org.remus.infomngmnt.file.new">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.remus.ui.rules.ruleDefinition">
      <validTransfers
            transferId="org.eclipse.remus.core.urlTransfer"
            typeId="FILE">
      </validTransfers>
      <validTransfers
            transferId="org.eclipse.remus.core.filetransfer"
            typeId="FILE">
      </validTransfers>
      <creationtrigger
            class="org.remus.infomngmnt.file.ui.FileCreationTrigger"
            typeId="FILE">
      </creationtrigger>
   </extension>
   <extension
         point="org.eclipse.remus.ui.infotypes.infotypeimages">
      <image
            image="icons/iconexperience/16/document_plain.png"
            infotype="FILE">
      </image>
   </extension>
   <extension
         point="org.eclipse.remus.ui.editor.informationUi">
      <editPage
            editpage="org.remus.infomngmnt.file.ui.FileEditPage"
            id="org.remus.infomngmnt.file.editPage"
            label="%editPage.label"
            type="FILE">
      </editPage>
      <editorAction
            commandId="org.remus.infomngmnt.file.cmdSavOnDisk"
            typeId="FILE">
      </editorAction>
      <editorAction
            commandId="org.remus.infomngmnt.file.open"
            typeId="FILE">
      </editorAction>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.remus.ui.navigation?after=iuspecific">
         <menu
               icon="icons/iconexperience/16/document_plain.png"
               id="org.remus.infomngmnt.file.saveondisk"
               label="%menu.label"
               mnemonic="%menu.mnemonic">
            <command
                  commandId="org.remus.infomngmnt.file.cmdSavOnDisk"
                  style="push">
            </command>
            <command
                  commandId="org.remus.infomngmnt.file.open"
                  style="push">
            </command>
            <separator
                  name="additions"
                  visible="false">
            </separator>
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <and>
                     <count
                           value="+">
                     </count>
                     <iterate>
                        <test
                              property="org.eclipse.remus.iutypes.typeEquals"
                              value="FILE">
                        </test>
                     </iterate>
                  </and>
               </with>
            </visibleWhen>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.remus.infomngmnt.file.cmdSavOnDisk"
            name="%command.name">
      </command>
      <command
            id="org.remus.infomngmnt.file.open"
            name="%command.name.0">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.remus.infomngmnt.internal.file.commands.SaveFileOnDiskHandler"
            commandId="org.remus.infomngmnt.file.cmdSavOnDisk">
      </handler>
      <handler
            class="org.remus.infomngmnt.internal.file.commands.OpenFileHandler"
            commandId="org.remus.infomngmnt.file.open">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="org.remus.infomngmnt.file.cmdSavOnDisk"
            icon="icons/iconexperience/16/floppy_disk.png">
      </image>
      <image
            commandId="org.remus.infomngmnt.file.open"
            icon="icons/iconexperience/16/window_next.png">
      </image>
   </extension>

</plugin>

<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension-point id="indexer" name="indexer" schema="schema/indexer.exsd"/>
   <extension-point id="analyzer" name="analyzer" schema="schema/analyzer.exsd"/>
   <extension
         id="searchBuilder"
         point="org.eclipse.core.resources.builders">
      <builder>
         <run
               class="org.remus.infomngmnt.search.internal.builder.SearchBuilder">
         </run></builder>
   </extension>
  
   <extension
         point="org.remus.infomngmnt.core.postProjectHandle">
      <projectHandle
            handle="org.remus.infomngmnt.search.internal.builder.SearchBuilderHandle">
      </projectHandle>
   </extension>
   <extension
         point="org.remus.infomngmnt.search.analyzer">
      <analyzer
            class="org.remus.infomngmnt.search.internal.analyzer.SimpleAnalyzer"
            id="org.remus.infomngmnt.search.SimpleAnalyzer">
      </analyzer>
   </extension>
   

</plugin>

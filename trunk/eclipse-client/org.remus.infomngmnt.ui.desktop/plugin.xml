<plugin>
	<extension-point id="traySection" name="traySection" schema="schema/traySection.exsd"/>
<extension-point id="trayAction" name="trayAction" schema="schema/trayAction.exsd"/>
 
   <extension point="org.eclipse.emf.edit.itemProviderAdapterFactories">
      <factory
            uri="http://remus-software.org/uimodel"
            class="org.remus.uimodel.provider.UimodelItemProviderAdapterFactory"
            supportedTypes=
              "org.eclipse.emf.edit.provider.IEditingDomainItemProvider
               org.eclipse.emf.edit.provider.IStructuredItemContentProvider
               org.eclipse.emf.edit.provider.ITreeItemContentProvider
               org.eclipse.emf.edit.provider.IItemLabelProvider
               org.eclipse.emf.edit.provider.IItemPropertySource"/>
   </extension>

   <extension point="org.eclipse.emf.ecore.generated_package">
      <package
            uri="http://remus-software.org/uimodel"
            class="org.remus.uimodel.UimodelPackage"
            genModel="model/desktop.genmodel"/>
   </extension>
   
   
  
         
     <extension
         point="org.remus.infomngmnt.ui.desktop.traySection">
      <sectionBox
            id="org.remus.infomngmnt.ui.dropBox"
            multiple="true"
            name="Drop-Section"
            preferencesclass="org.remus.infomngmnt.ui.tray.DropSectionPreferencePage"
            sectionControl="org.remus.infomngmnt.ui.tray.DropSection">
      </sectionBox>
      <sectionBox
            id="org.remus.infomngmnt.common.ui.trayActions"
            multiple="false"
            name="Actions"
            preferencesclass="org.remus.infomngmnt.ui.desktop.trayaction.TrayActionPreferences"
            sectionControl="org.remus.infomngmnt.ui.desktop.trayaction.ActionTraySection">
      </sectionBox>
   </extension>
    <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.remus.infomngmnt.ui.main"
            class="org.remus.infomngmnt.ui.desktop.preferences.DesktopPanelPreferencePage"
            id="org.remus.infomngmnt.ui.desktop"
            name="Desktop Integration">
      </page>
      <page
            category="org.remus.infomngmnt.ui.desktop"
            class="org.remus.infomngmnt.ui.preference.DesktopPanelAppearancePreferencePage"
            id="org.remus.infomngmnt.ui.desktoppanel"
            name="Desktop-Panel">
      </page>
    </extension>
</plugin>
